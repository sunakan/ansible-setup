<main class="text-center p-12">
  <h2 class="font-bold text-3xl mt-2">Welcome!</h2>
  <section class="mt-6">
    <p>
      <%= response['order_ids'].size %> <%= "order".pluralize(response['order_ids'].size) %> in the system.
    </p>

    <% response['order_ids'].each do  |order_id| %>
      <a title="Link to order 1" href="<%= "/orders/#{order_id}" %>">
        <span role="img" description="brown packing box" class="">ðŸ“¦</span>
      </a>
    <% end %>

    <hr class="my-6">
    <h3 class="my-4 text-center font-bold text-2xl">Service Status</h3>
    <div class="grid grid-cols-2">
      <% response['service_statuses'].each do |service_status| %>
